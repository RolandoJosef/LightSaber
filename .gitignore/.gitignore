#include <Adafruit_NeoPixel.h>

#define PIN 3	 // input pin Neopixel is attached to
#define NUMPIXELS      12 // number of neopixels in Ring
Adafruit_NeoPixel pixels1 = Adafruit_NeoPixel(NUMPIXELS, PIN, NEO_GRB + NEO_KHZ800);

#define PIN 4	 // input pin Neopixel is attached to
#define NUMPIXELS      12 // number of neopixels in Ring
Adafruit_NeoPixel pixels2 = Adafruit_NeoPixel(NUMPIXELS, PIN, NEO_GRB + NEO_KHZ800);



int delayval = 100; // timing delay
int sensorValue = 0;
int redColor = 0;
int greenColor = 0;
int blueColor = 0;

void setup() {
  pixels1.begin(); // Initializes the NeoPixel libarary.
  pixels2.begin();
  pinMode(A0, INPUT);
// Serial.begin(9600)
}

void loop() {
  setColor();
  Lights();
  delay(delayval);
  
}

void Lights() {
  for(int i=0;i<NUMPIXELS;i++){

    // pixels.Color takes RGB values, from 0,0,0 up to 255,255,255
    pixels1.setPixelColor(i, pixels1.Color(redColor, greenColor, blueColor)); // Moderately bright green color.
    pixels2.setPixelColor(i, pixels2.Color(redColor, greenColor, blueColor));
    pixels1.show(); // This sends the updated pixel color to the hardwar.
    pixels2.show();
  
  }
}

void setColor(){
  if (analogRead(A0) < 333) {
    redColor = 255;
  	greenColor = 0;
  	blueColor = 0;
  }
  else if (analogRead(A0) > 333 && analogRead(A0) < 666) {
    redColor = 0;
  	greenColor = 255;
  	blueColor = 0;
  }
  else if (analogRead(A0) > 666) {
    redColor = 0;
  	greenColor = 0;
  	blueColor = 255;
  }
  
}
